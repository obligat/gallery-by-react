/* Base Application Styles */
html, body
  background-color: #222
  width: 100%
  height: 100%
  .content
    width: 100%
    height: 100%
    .stage
      position: relative
      width: 100%
      height: 680px
      .img-sec
        position: relative
        width: 100%
        height: 100%
        overflow: hidden
        background-color: #ddd
      .controller-nav
        position: absolute
        left: 0
        bottom: 30px
        width: 100%
        z-index: 101
        text-align: center
